<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E7FAFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_log"
        style="@style/Widget.MaterialComponents.MaterialCalendar.HeaderConfirmButton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:onClick="onAppSelectorPressed"
        android:padding="0dp"
        android:text="@string/btn_log"
        android:textColor="#800085AD"
        android:textColorHighlight="#00FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/btn_home"
        app:layout_constraintTop_toTopOf="@+id/btn_home" />

    <Button
        android:id="@+id/btn_control"
        style="@style/Widget.MaterialComponents.MaterialCalendar.HeaderConfirmButton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:onClick="onAppSelectorPressed"
        android:padding="0dp"
        android:text="@string/btn_control"
        android:textColor="#800085AD"
        android:textColorHighlight="#00FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/btn_log"
        app:layout_constraintTop_toTopOf="@+id/btn_log" />

    <Button
        android:id="@+id/btn_conv_demo"
        style="@style/Widget.MaterialComponents.MaterialCalendar.HeaderConfirmButton"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:onClick="onAppSelectorPressed"
        android:padding="0dp"
        android:text="@string/btn_conv_demo"
        android:textColor="#800085AD"
        android:textColorHighlight="#00FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/btn_control"
        app:layout_constraintTop_toTopOf="@+id/btn_control" />

    <ImageButton
        android:id="@+id/btn_volume"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_volume_on"
        android:background="@android:color/transparent"
        android:contentDescription="@string/btn_mute"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_home"
        app:layout_constraintEnd_toStartOf="@id/btn_help"
        app:layout_constraintTop_toTopOf="@id/btn_home" />

    <ImageButton
        android:id="@+id/btn_help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_help"
        android:background="@android:color/transparent"
        android:contentDescription="@string/btn_mute"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_home" />

    <!--<TextView-->
        <!--android:id="@+id/btn_lang"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="EN"-->
        <!--android:textSize="36dp"-->
        <!--android:textColor="#154697"-->
        <!--android:layout_marginBottom="31dp"-->
        <!--android:layout_marginEnd="3dp"-->
        <!--app:layout_constraintBottom_toBottomOf="@id/btn_home"-->
        <!--app:layout_constraintEnd_toStartOf="@id/btn_volume"-->
        <!--app:layout_constraintTop_toTopOf="@id/btn_home" />-->

    <Button
        android:id="@+id/btn_home"
        style="@style/Widget.MaterialComponents.MaterialCalendar.HeaderConfirmButton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:foregroundTint="@color/design_default_color_on_primary"
        android:onClick="onAppSelectorPressed"
        android:padding="0dp"
        android:text="@string/btn_home"
        android:textColor="#800085AD"
        android:textColorHighlight="#00FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_status" />

    <Button
        android:id="@+id/btn_action"
        style="@style/Widget.MaterialComponents.MaterialCalendar.HeaderConfirmButton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:foregroundTint="@color/design_default_color_on_primary"
        android:onClick="onAppSelectorPressed"
        android:padding="0dp"
        android:text="@string/action"
        android:textColor="#800085AD"
        android:textColorHighlight="#00FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/btn_conv_demo"
        app:layout_constraintTop_toTopOf="@+id/btn_conv_demo" />


    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/loading"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_home" />

</androidx.constraintlayout.widget.ConstraintLayout>