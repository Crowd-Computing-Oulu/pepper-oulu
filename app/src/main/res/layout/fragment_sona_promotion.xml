<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gpt_prototype.GPTFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_lg_3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/sona_qrcode"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.395"
            app:srcCompat="@drawable/sona_qrcode"
            tools:srcCompat="@drawable/sona_qrcode" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/varelaroundregular"
            android:text="Sign up for exciting studies at UBICOMP! "
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0D47A1"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.061" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="241dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/varelaroundregular"
            android:text="SCAN ME"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FF6F00"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.718" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_start"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:padding="16dp"
        android:text="START OVER"
        android:textAllCaps="true"
        android:textColor="#FF6F00"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/txt_instruction"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/txt_instruction"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_5" />

    <TextView
        android:id="@+id/txt_option_num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="5"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_5"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_5"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txt_option_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="2"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_2"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_2"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txt_option_num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="3"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_3"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_3"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txt_option_num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="4"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_4"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_4"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txt_option_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="1"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_1"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_1" />

    <Button
        android:id="@+id/button_lg_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="300dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="[OPTION]"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_instruction" />

    <Button
        android:id="@+id/button_lg_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="300dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="[OPTION]"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_1" />

    <Button
        android:id="@+id/button_lg_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="300dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="[OPTION]"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_2" />

    <Button
        android:id="@+id/button_lg_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="300dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="[OPTION]"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_4" />

    <Button
        android:id="@+id/button_lg_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="300dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="[OPTION]"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_3" />

    <TextView
        android:id="@+id/txt_hmm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="Hmm..."
        android:textColor="#0D47A1"
        android:textSize="128sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_caption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/varela"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#0D47A1"
        android:textSize="36sp"
        android:translationZ="-20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/varela"
        android:text="Tap or say an option"
        android:textAllCaps="true"
        android:textColor="#FF6F00"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_lg_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/button_lg_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />

    <ProgressBar
        android:id="@+id/spinner_hmm"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#0F48A2"
        android:foregroundTint="#0F48A2"
        android:indeterminateTint="#0F48A2"
        android:progressBackgroundTint="#0F48A2"
        android:progressTint="#0F48A2"
        android:secondaryProgressTint="#0F48A2"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/txt_hmm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/txt_hmm"
        app:layout_constraintTop_toBottomOf="@+id/txt_hmm" />

</androidx.constraintlayout.widget.ConstraintLayout>