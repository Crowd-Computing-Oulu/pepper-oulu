<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applications.itee_promotion_offline.ITEEPromotionFragment">

    <Button
        android:id="@+id/button_start"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:padding="16dp"
        android:text="@string/start_over"
        android:textAllCaps="true"
        android:textColor="#FF6F00"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/txt_instruction"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/txt_instruction"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_5" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/varela"
        android:padding="16dp"
        android:text="@string/skip"
        android:textAllCaps="true"
        android:textColor="#FF6F00"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/txt_instruction"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/txt_instruction"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_5" />

    <TextView
        android:id="@+id/txt_option_num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="@string/_5"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_5"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_5"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txt_option_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="@string/_2"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_2"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_2"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txt_option_num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="@string/_3"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_3"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_3"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txt_option_num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="@string/_4"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_4"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_4"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txt_option_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="@string/_1"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_lg_1"
        app:layout_constraintEnd_toStartOf="@+id/button_lg_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lg_1" />

    <Button
        android:id="@+id/button_lg_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/option"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_instruction" />

    <Button
        android:id="@+id/button_lg_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/option"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_1" />

    <Button
        android:id="@+id/button_lg_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/option"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_2" />

    <Button
        android:id="@+id/button_lg_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/option"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_4" />

    <Button
        android:id="@+id/button_lg_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"

        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/varela"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/option"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lg_3" />

    <TextView
        android:id="@+id/txt_hmm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="@string/hmm"
        android:textColor="#0D47A1"
        android:textSize="128sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/txt_caption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/varela"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#0D47A1"
        android:textSize="36sp"
        android:translationZ="-20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/txt_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/varela"
        android:text="@string/say_or_tap_an_option"
        android:textAllCaps="true"
        android:textColor="#FF6F00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_lg_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/button_lg_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />

    <ProgressBar
        android:id="@+id/spinner_hmm"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#0F48A2"
        android:foregroundTint="#0F48A2"
        android:indeterminateTint="#0F48A2"
        android:progressBackgroundTint="#0F48A2"
        android:progressTint="#0F48A2"
        android:secondaryProgressTint="#0F48A2"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/txt_hmm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/txt_hmm"
        app:layout_constraintTop_toBottomOf="@+id/txt_hmm"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>